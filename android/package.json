{
  "name": "abstractalgorithms-android",
  "version": "1.0.0",
  "private": true,
  "description": "Native Android app wrapper for Abstract Algorithms blog",
  "scripts": {
    "build:android": "cd android && gradlew.bat assembleRelease",
    "build:android-debug": "cd android && gradlew.bat assembleDebug",
    "build:android-unix": "cd android && ./gradlew assembleRelease",
    "build:android-debug-unix": "cd android && ./gradlew assembleDebug",
    "clean": "cd android && gradlew.bat clean",
    "clean-unix": "cd android && ./gradlew clean"
  },
  "engines": {
    "node": ">=16"
  }
}
